  "capabilities": {
    "windowcoverings_level": {
      "title": {
        "en": "Window Coverings State",
        "nl": "Raambekleding Status",
        "de": "Jalousien-Status",
        "fr": "Etat des stores",
        "it": "Stato delle tapparelle",
        "sv": "Status för fönsterskydd",
        "no": "Status for vindusbeskyttelse",
        "es": "Estado de los cobertores de ventanas",
        "da": "Status for vinduesdække"
      },
      "type": "number",
      "chartType": "stepLine",
      "min": 0,
      "max": 100,
      "decimals": 0,
      "units": "%",
      "getable": true,
      "setable": true,
      "uiComponent": "slider"
    },
    "wiredpilot_mode": {
      "type": "enum",
      "title": {
        "en": "Pilot wire mode",
        "fr": "Mode du fil pilot"
      },
      "uiComponent": "picker",
      "getable": true,
      "setable": true,
      "values": [
        {
          "id": "heat",
          "title": {
            "en": "Comfort",
            "fr": "Confort"
          }
        },
        {
          "id": "cool",
          "title": {
            "en": "Eco ",
            "fr": "Eco"
          }
        },
        {
          "id": "off",
          "title": {
            "en": "Frost-guard",
            "fr": "Hors-gel"
          }
        }
      ]
    }
  },
  "drivers": [
