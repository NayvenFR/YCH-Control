{
  "id": "fr.yelca-m.ychcontrol",
  "version": "1.1.2",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "YCH Control",
    "fr": "YCH Control"
  },
  "brandColor": "#FF3F13",
  "description": {
    "en": "Legrand® Home + Control for Homey",
    "fr": "Legrand® Home + Control pour Homey"
  },
  "tags": {
    "en": [
      "Legrand",
      "Home",
      "Control",
      "+",
      "lights",
      "sockets",
      "connected",
      "YCH",
      "curtains",
      "Bticino",
      "MyHome"
    ],
    "fr": [
      "Legrand",
      "Home",
      "Control",
      "+",
      "lumière",
      "prise",
      "connecté",
      "YCH",
      "Volets",
      "Roulants",
      "Bticino",
      "MyHome"
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "onmode_comfort",
        "title": {
          "en": "Is on comfort mode",
          "fr": "Est en mode confort"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }]
      },
      {
        "id": "onmode_eco",
        "title": {
          "en": "Is on eco mode",
          "fr": "Est en mode eco"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }]
      },
      {
        "id": "onmode_frost",
        "title": {
          "en": "Is on frost-guard mode",
          "fr": "Est en mode hors-gel"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }]
      },
      {
        "id": "level_changed",
        "title": {
          "en": "Shutter-level changed",
          "fr": "La hauteur du volet roulant a été modifée"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=rollershutterdriver&capabilities=windowcoverings_level"
          }]
      }
    ],
    "conditions": [
      {
        "id": "onmode_x",
        "title": {
          "en": "State is...",
          "fr": "L'état est..."
        },
        "titleFormatted": {
          "en": "State !{{is|isn't}} [[state]]",
          "fr": "L'état !{{est|n'est pas}} [[state]]"
        },
        "args": [
            {
              "type": "device",
              "name": "my_device",
              "filter": "driver_id=wiredpilotdriver"
            },
          {
            "name": "state",
            "type": "dropdown",
            "values": [
              {
                "id": "frost",
                "label": {
                  "en": "Frost-guard",
                  "fr": "Hors-gel"
                }
              },
              {
                "id": "comfort",
                "label": {
                  "en": "Comfort",
                  "fr": "Confort"
                }
              },
              {
                "id": "eco",
                "label": {
                  "en": "Eco",
                  "fr": "Eco"
                }
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "level",
        "title": {
          "en": "Change level ",
          "fr": "Changer la hauteur du volet roulant "
        },
        "titleFormatted": {
          "en": "Set level to [[level]]",
          "fr ": "Changer la hauteur à [[level]]"
        },
        "args": [
          {
            "name": "level",
            "type": "range",
            "min": 0,
            "max": 100,
            "step": 1,
            "value": 50,
            "label": "%",
            "labelMultiplier": 1,
            "labelDecimals": 0
          },
            {
              "type": "device",
              "name": "my_device",
              "filter": "driver_id=rollershutterdriver&capabilities=windowcoverings_level"
            }
        ]
      },
      {
        "id": "start_frost",
        "title": {
          "en": "Set frost-guard mode",
          "fr": "Activer le mode hors-gel"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }]
      },
      {
        "id": "start_eco",
        "title": {
          "en": "Set eco mode",
          "fr": "Activer le mode eco"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }]
      },
      {
        "id": "start_comfort",
        "title": {
          "en": "Set comfort mode",
          "fr": "Activer le mode confort"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }]
      }
    ]
  },
  "contributors": {
    "developers": [
      {
        "name": "Yann Montiel",
        "email": "montiel.yann&gmail.com"
      }
    ],
    "translators": [
