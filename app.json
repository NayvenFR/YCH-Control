{
  "id": "fr.yelca-m.ychcontrol",
  "version": "1.0.6",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "YCH Control",
    "fr": "YCH Control"
  },
  "brandColor": "#FF3F13",
  "description": {
    "en": "Legrand® Home + Control for Homey",
    "fr": "Legrand® Home + Control pour Homey"
  },
  "tags": {
    "en": [
      "Legrand",
      "Home",
      "Control",
      "+",
      "lights",
      "sockets",
      "connected",
      "YCH",
      "curtains"
    ],
    "fr": [
      "Legrand",
      "Home",
      "Control",
      "+",
      "lumière",
      "prise",
      "connectée",
      "YCH",
      "Volets",
      "Roulants"
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "onmode_comfort",
        "title": {
          "en": "Comfort mode",
          "fr" : "Mode confort"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }
        ]
      },
      {
        "id": "onmode_eco",
        "title": {
          "en": "Eco mode",
          "fr": "Mode eco"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }
        ]
      },
      {
        "id": "onmode_frost",
        "title": {
          "en": "Frost-guard mode",
          "fr": "Mode hors-gel"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "onmode_x",
        "title": {
          "en": "State is...",
          "fr": "L'état est..."
        },
        "titleFormatted": {
          "en": "State !{{is|isn't}} [[state]]",
          "fr": "L'état !{{est|n'est pas}} [[state]]"
        },
        "args": [
          {
            "name": "state",
            "type": "dropdown",
            "values": [
              {
                "id": "frost",
                "label": {
                  "en": "Frost-guard",
                  "fr": "Hors-gel"
                }
              },
              {
                "id": "comfort",
                "label": {
                  "en": "Comfort",
                  "fr": "Confort"
                }
              },
              {
                "id": "eco",
                "label": {
                  "en": "Eco",
                  "fr": "Eco"
                }
              }
            ]
          },
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }
        ]
      }
    ],
    "actions" : [
      {
        "id": "start_frost",
        "title": {
          "en": "Set frost-guard mode",
          "fr": "Activer le mode hors-gel"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }
        ]
      },
      {
        "id": "start_eco",
        "title": {
          "en": "Set eco mode",
          "fr": "Activer le mode eco"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }
        ]
      },
      {
        "id": "start_comfort",
        "title": {
          "en": "Set comfort mode",
          "fr": "Activer le mode confort"
        },
        "args": [
          {
            "type": "device",
            "name": "my_device",
            "filter": "driver_id=wiredpilotdriver"
          }
        ]
      }
    ]
  },
  "contributors": {
    "developers": [
      {
        "name": "Yann Montiel",
        "email": "montiel.yann&gmail.com"
      }
    ],
    "translators": [
      {
        "name": "Yann Montiel"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "yannmtl"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/NayvenFR/YCH-Control/issues"
  },
  "homeyCommunityTopicId": 34093,
  "homepage": "https://www.dev.yelca-m.com",
  "source": "https://github.com/NayvenFR/YCH-Control",
  "support": "mailto:NayvenDev@gmail.com",
  "category": [
    "appliances"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "YELCA-M",
    "email": "office@yelca-m.fr"
  },
  "capabilities": {
    "wiredpilot_mode": {
      "type": "enum",
      "title": {
        "en": "Pilot wire mode",
        "fr": "Mode du fil pilot"
      },
      "uiComponent": "picker",
      "getable": true,
      "setable": true,
      "values": [
        {
          "id": "heat",
          "title": {
            "en": "Comfort",
            "fr": "Confort"
          }
        },
        {
          "id": "cool",
          "title": {
            "en": "Eco ",
            "fr": "Eco"
          }
        },
        {
          "id": "off",
          "title": {
            "en": "Frost-guard",
            "fr": "Hors-gel"
          }
        }
      ]
    }
  },
  "drivers": [
    {
      "id": "lightdriver",
      "name": {
        "en": "Light",
        "fr": "Lumière"
      },
      "pair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "class": "light",
      "capabilities": [],
      "images": {
        "large": "/drivers/lightdriver/assets/images/large.jpg",
        "small": "/drivers/lightdriver/assets/images/small.jpg"
      }
    },
    {
      "id": "socketdriver",
      "name": {
        "en": "Socket",
        "fr": "Prise"
      },
      "pair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "class": "socket",
      "capabilities": [],
      "images": {
        "large": "/drivers/socketdriver/assets/images/large.jpg",
        "small": "/drivers/socketdriver/assets/images/small.jpg"
      }
    },
    {
      "id": "rollershutterdriver",
      "name": {
        "en": "Roller Shutter",
        "fr": "Volet Roulant"
      },
      "class": "windowcoverings",
      "pair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "capabilities": [],
      "images": {
        "large": "/drivers/rollershutterdriver/assets/images/large.jpg",
        "small": "/drivers/rollershutterdriver/assets/images/small.jpg"
      }
    },
    {
      "id": "wiredpilotdriver",
      "name": {
        "en": "Pilot Wire",
        "fr": "Fil Pilote"
      },
      "pair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "class": "other",
      "capabilities": [],
      "images": {
        "large": "/drivers/wiredpilotdriver/assets/images/large.jpg",
        "small": "/drivers/wiredpilotdriver/assets/images/small.jpg"
      }
    }
  ]
}